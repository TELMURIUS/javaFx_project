<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="333.0" prefWidth="449.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="insar_timur.javafx_project.MusicPlayer">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="chooseMusic" text="GET PREPARED TO THE PLEASURE" textFill="WHITE">
      <font>
         <Font name="Fira Code Light" size="24.0" />
      </font></Label>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="selectMusicButton" onMouseClicked="#chooseMusic" styleClass="big-button" text="🎧" />
        <Button fx:id="playButton" onMouseClicked="#play" styleClass="big-button" text="▶" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="pauseButton" onMouseClicked="#pause" styleClass="big-button" text="⏸" />
        <Button fx:id="stopButton" onMouseClicked="#stop" styleClass="big-button" text="⏹" />
    </HBox>

    <Button fx:id="goToPlaylistButton" onMouseClicked="#goToPlaylist" styleClass="playlist-button" text="🎵" />

    <HBox alignment="CENTER" spacing="20.0">
        <Button alignment="CENTER" onMouseClicked="#openAddForm" styleClass="add-button" text="Add" />
    </HBox>
</VBox>
