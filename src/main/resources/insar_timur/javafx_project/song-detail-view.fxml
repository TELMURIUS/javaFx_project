<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="insar_timur.javafx_project.SongDetailController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" prefHeight="26.0" prefWidth="161.0" spacing="20.0">
        <HBox alignment="TOP_LEFT" prefHeight="26.0" prefWidth="101.0">
            <Button onMouseClicked="#goBack" styleClass="back-button" text="⇦" />
        </HBox>
        <HBox alignment="TOP_RIGHT" prefHeight="26.0" prefWidth="101.0">
            <Button onMouseClicked="#info" styleClass="info-button" text="⋯" />
        </HBox>
    </HBox>

    <VBox alignment="CENTER" spacing="20.0">
        <ImageView fx:id="albumCover" fitHeight="200" fitWidth="200" />

        <VBox alignment="CENTER" spacing="10.0">
            <Label fx:id="songTitle" styleClass="song-title" text="Song Title" />
            <Label fx:id="songArtist" styleClass="song-artist" text="Artist" />
            <Label fx:id="songAlbum" styleClass="song-album" text="Album" />
            <Label fx:id="songGenre" styleClass="song-genre" text="Genre" />
        </VBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button onMouseClicked="#previous" styleClass="control-button" text="⏮" />
            <Button onMouseClicked="#toggle" styleClass="control-button" fx:id="playPauseButton" text="⏯" />
            <Button onMouseClicked="#next" styleClass="control-button" text="⏭" />
        </HBox>
    </VBox>
</VBox>
