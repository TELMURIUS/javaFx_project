<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="insar_timur.javafx_project.SongDetailController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ImageView fx:id="albumCover" fitHeight="200" fitWidth="200" />

    <VBox alignment="CENTER" spacing="10.0">
        <Label fx:id="songTitle" styleClass="song-title" text="Song Title" />
        <Label fx:id="songArtist" styleClass="song-artist" text="Artist" />
        <Label fx:id="songAlbum" styleClass="song-album" text="Album" />
        <Label fx:id="songGenre" styleClass="song-genre" text="Genre" />
    </VBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onMouseClicked="#playPreviousSong" styleClass="control-button" text="⏮" />
        <Button onMouseClicked="#play" styleClass="control-button" text="⏯" />
        <Button onMouseClicked="#pause" styleClass="control-button" text="▶" />
        <Button onMouseClicked="#stop" styleClass="control-button" text="⏹" />
        <Button onMouseClicked="#playNextSong" styleClass="control-button" text="⏭" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onMouseClicked="#toggleLooping" styleClass="control-button" text="🔁" />
        <Button onMouseClicked="#toggleShuffling" styleClass="control-button" text="🔀" />
    </HBox>
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="20.0">
      <children>
           <Button onAction="#showSongDescription" text="Song Description" />
          <Button alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#goBack" styleClass="back-button" text="Back" />
      </children>
   </HBox>
    <HBox alignment="TOP_RIGHT" spacing="10.0" />
</VBox>
